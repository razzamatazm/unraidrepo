<?xml version="1.0"?>
<Container version="2">
  <Name>Mustarrd</Name>
  <Repository>ghcr.io/razzamatazm/mustarrd/backend:latest</Repository>
  <Registry>https://ghcr.io</Registry>
  <Network>bridge</Network>
  <MyIP />
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/razzamatazm/mustarrd/issues</Support>
  <Project>https://github.com/razzamatazm/mustarrd</Project>
  <Overview>
Mustarrd is an IPTV Catchup DVR for Xtream Codes providers. Browse EPG history, queue catchup downloads, remove commercials, and save files for media player apps.
  </Overview>
  <Category>MediaApp:Video</Category>
  <WebUI>http://[IP]:[PORT:4177]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/razzamatazm/mustarrd/main/unraid/mustarrd.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/razzamatazm/mustarrd/main/frontend/src/assets/mustarrdicon.png</Icon>
  <ExtraParams />
  <PostArgs />
  <CPUset />
  <DateInstalled />
  <DonateText />
  <DonateLink />
  <Requires />

  <Config Name="Web UI Port" Target="4177" Default="4177" Mode="tcp" Description="Container Port: 4177" Type="Port" Display="always" Required="true" Mask="false">4177</Config>
  <Config Name="AppData Config" Target="/app/config" Default="/mnt/cache/appdata/mustarrd" Mode="rw" Description="Persistent app config and SQLite database" Type="Path" Display="always" Required="true" Mask="false">/mnt/cache/appdata/mustarrd</Config>
  <Config Name="Downloads (Working)" Target="/app/downloads" Default="/mnt/user/downloads/mustarrd" Mode="rw" Description="In-progress downloads and temp processing files" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/downloads/mustarrd</Config>
  <Config Name="Completed Media" Target="/app/completed" Default="/mnt/user/data/media" Mode="rw" Description="Final output location for completed files" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/media</Config>
  <Config Name="Timezone" Target="TZ" Default="America/New_York" Mode="" Description="Container timezone" Type="Variable" Display="always" Required="true" Mask="false">America/New_York</Config>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="User ID for file permissions" Type="Variable" Display="advanced" Required="true" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Group ID for file permissions" Type="Variable" Display="advanced" Required="true" Mask="false">100</Config>
  <Config Name="VAAPI Driver" Target="LIBVA_DRIVER_NAME" Default="iHD" Mode="" Description="Set to i965 for older Intel iGPU generations" Type="Variable" Display="advanced" Required="false" Mask="false">iHD</Config>
  <Config Name="EPG Timezone" Target="CATCHUP_TIMEZONE" Default="UTC" Mode="" Description="Program guide display timezone inside Mustarrd" Type="Variable" Display="advanced" Required="false" Mask="false">UTC</Config>
  <Config Name="GPU Device" Target="/dev/dri" Default="/dev/dri" Mode="rw" Description="Optional Intel/AMD GPU passthrough for ffmpeg acceleration" Type="Device" Display="advanced" Required="false" Mask="false">/dev/dri</Config>
</Container>
